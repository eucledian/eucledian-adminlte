{{#if label}}
  <label for="{{prop}}">{{label}}</label>
{{/if}}
{{#if search}}
  {{#power-select-multiple
    selected=selected
    search=search
    options=options
    disabled=disabled
    onchange=(action 'onSelect')
    as |option|}}
    {{get option name}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select-multiple
    options=options
    selected=selected
    disabled=disabled
    searchField=searchField
    onchange=(action 'onSelect')
    as |option|}}
    {{get option name}}
  {{/power-select-multiple}}
{{/if}}
{{#each (get model.errors prop) as |error|}}
  <div class="errors">
    {{error.message}}
  </div>
{{/each}}
{{#if (v-get model prop 'isInvalid')}}
  <div class="errors">
    {{v-get model prop 'message'}}
  </div>
{{/if}}