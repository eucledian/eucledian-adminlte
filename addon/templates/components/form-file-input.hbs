{{#if label}}
  <label for="{{prop}}">{{label}}</label>
{{/if}}
<input type="file" multiple="true" name="{{prop}}" id="{{prop}}" data-value={{get model prop}} onchange={{action "selectFile"}} disabled={{disabled}}>
{{#if error}}
  <ul>
    {{#if exceedsFileSize}}
      <li>{{exceedErrorText}}</li>
    {{/if}}
    {{#if unallowedFileType}}
      <li>{{unallowedFileTypeText}}</li>
    {{/if}}
  </ul>
{{/if}}
{{#each (get model.errors prop) as |error|}}
  <div class="errors">
    {{error.message}}
  </div>
{{/each}}
{{#if (v-get model prop 'isInvalid')}}
  <div class="errors">
    {{v-get model prop 'message'}}
  </div>
{{/if}}